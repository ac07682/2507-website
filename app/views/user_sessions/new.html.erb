<div class="container text-center">
  <h2>Login:</h2>

  <%= form_tag user_sessions_path, method: :post do %>

  <div class="form-group">
     <%= text_field_tag :username, nil, placeholder: "Username", autocorrect: "off", autocapitalize: "none", class: "form-control" %>
  </div>
  <div class="form-group">
      <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
  </div>

  <%= submit_tag "Login", class: "btn btn-success btn-block" %>

  <% end %>
</div>