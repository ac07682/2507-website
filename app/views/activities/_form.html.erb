<section class="user_form">
  <%= form_for(@activity) do |f| %>
    <ul>
    <% @activity.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= f.text_field :title, placeholder: "Title" %>
    </p>
    <p>
      <%= f.text_field :location, placeholder: "Location" %>
    </p>
    <p>
      <%= f.label :activity_date %><br />
      <%= f.date_field :activity_date %>
    </p>
    <p>
      <%= f.label :end_date %><br />
      <%= f.date_field :end_date %>
    </p>
    <p>
      <%= f.text_area :details, placeholder: "Activity details"  %>
    </p>
    <p>
      <%= f.label :respond_by %><br />
      <%= f.date_field :respond_by %>
    </p>
    <p>
      <%= f.label :category %><br />
      <%= f.select :category, ["Airborne", "Adventure Training", "Community", "Shooting", "Sports", "Fieldcraft", "Leadership", "Camps", "First Aid", "D of E", "Other"] %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</section>